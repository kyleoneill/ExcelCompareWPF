<Page x:Class="ExcelReaderWPF.ProgressBar"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ExcelReaderWPF"
      mc:Ignorable="d" 
      d:DesignHeight="350" d:DesignWidth="525"
      Title="ProgressBar">

    <Grid Margin="20,20,158,261">
        <ProgressBar x:Name="ProgressBarObj" Minimum="0" Maximum="100" Value="0" Margin="71,227,-45,-181"/>
        <TextBox x:Name="ProgressBox" Height="20" Margin="71,187,0,-138" TextWrapping="Wrap" VerticalAlignment="Top" IsReadOnly="True" HorizontalAlignment="Left" Width="188"/>
        <Button Content="Start" HorizontalAlignment="Left" Height="28" Margin="71,133,0,-92" VerticalAlignment="Top" Width="125" Click="Button_Click"/>
    </Grid>
</Page>
